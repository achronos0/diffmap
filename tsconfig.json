{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"module": "es2020",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"target": "es2020"
	},
	"include": [
    	"src/**/*"
  	]
}
